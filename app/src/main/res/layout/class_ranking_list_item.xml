<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxEms="6"
            android:maxLines="1"
            android:text="1"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/xm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxEms="6"
            android:maxLines="1"
            android:text="star"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/ljdt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxEms="6"
            android:maxLines="1"
            android:text="1300"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/sjdt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxEms="6"
            android:maxLines="1"
            android:text="0"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/zql"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxEms="6"
            android:maxLines="1"
            android:text="0.8115"
            android:textAlignment="center" />
    </LinearLayout>
</LinearLayout>